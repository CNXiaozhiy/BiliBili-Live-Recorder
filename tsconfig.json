{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "*": ["src/*", "src/types/*"]
    },
    "sourceMap": true
  },
  "include": ["src/**/*", "../MyCode/temp/ShutdownManager.ts"],
  "exclude": ["node_modules", "dist"]
}
